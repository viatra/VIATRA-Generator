package queries
 
import "http://www.example.org/familytree"

@Constraint(message="memberIsItsOwnParent", severity="error", key={m})
pattern memberIsItsOwnParent(m: Member) = {
	FamilyTree.members(_, m);
	Member.parents(m, p);
	m == p;
}

